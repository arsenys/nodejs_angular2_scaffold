// Browser related settings
meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge')
meta(name='referrer', content='origin')
meta#viewport(name='viewport', content='width=device-width, initial-scale=1')

// Open Graph data
meta(property='og:title', content='#{gulpSettings.INFO.TITLE}')
meta(property='og:image', content='#{gulpSettings.FOLDERS.CLIENT.CONTENT.IMAGES}/logos/large.png')
meta(property='og:image:type', content='image/png')
meta(property='og:image:width', content='200')
meta(property='og:image:height', content='200')
meta(property='og:description', content='#{gulpSettings.INFO.DESCRIPTION}')

// Schema.org markup for Google+
meta(itemprop='name', content='#{gulpSettings.INFO.TITLE}')
meta(itemprop='description', content='#{gulpSettings.INFO.DESCRIPTION}')
meta(itemprop='image', content='#{gulpSettings.FOLDERS.CLIENT.CONTENT.IMAGES}/logos/large.png')

// Basic favicon
link(rel='icon', type='image/x-icon', href='#{gulpSettings.FOLDERS.CLIENT.CONTENT.IMAGES}/favicons/favicon.ico')

// Mobile devices and extended fav icons
link(rel='apple-touch-icon', sizes='76x76', href='#{gulpSettings.FOLDERS.CLIENT.CONTENT.IMAGES}/favicons/apple-touch-icon-76x76.png')
link(rel='apple-touch-icon', sizes='120x120', href='#{gulpSettings.FOLDERS.CLIENT.CONTENT.IMAGES}/favicons/apple-touch-icon-120x120.png')
link(rel='apple-touch-icon', sizes='152x152', href='#{gulpSettings.FOLDERS.CLIENT.CONTENT.IMAGES}/favicons/apple-touch-icon-152x152.png')
link(rel='icon', type='image/png', href='#{gulpSettings.FOLDERS.CLIENT.CONTENT.IMAGES}/favicons/favicon.png', sizes='96x96')